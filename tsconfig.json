{
  "compilerOptions": {
    "declaration": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ESNext",
    "lib": [
      "ESNext"
    ],
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "skipLibCheck": true,
    "outDir": "lib",
    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": true
  },
  "ts-node": {
    "esm": true
  },
  "include": [
    "sandstone.config.ts",
    "src"
  ],
}